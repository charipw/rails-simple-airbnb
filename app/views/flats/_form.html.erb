<%= form_with model: flat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :address %>
  <%= f.text_field :address %> <br>
  <%= f.label :description %>
  <%= f.text_field :description %> <br>
  <%= f.label :price_per_night %>
  <%= f.text_field :price_per_night %> <br>
  <%= f.label :number_of_guests %>
  <%= f.text_field :number_of_guests %> <br>
  <%= f.submit "Add a new flat", class: "btn-btn-primary" %>
<% end %>
