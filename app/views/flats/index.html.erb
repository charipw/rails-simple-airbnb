<button type="button" class="btn btn-secondary" <%= link_to "Add flat", new_flat_path  %> </button>
<div class="container" class="d-flex justify-content-center">
<h1>Simple Airbnb</h1>

<% @flats.each do |flat| %>
<div class="card" style="width: 18rem class="p-2"" >
  <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= link_to flat.name, flat_path(flat) %> </h5>
      <p class="card-text"><%= flat.address %></p>
      <p class="card-text"><%= flat.description %></p>
      <p>Price per night: <%= flat.price_per_night %></p>
      <p>Number of guests: <%= flat.number_of_guests %></p>
</div>

  <% end %>
